# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index



#User

POST   /users                         controllers.UserController.findUser

#Streams

#GET    /streams                       controllers.Application.streams
POST   /newStream                       controllers.Application.newStream


#GET    /messages                       controllers.MessageController.messages
#POST    /messages                      controllers.MessageController.newMessage
#GET   /messages/:id/streammessages     controllers.MessageController.streamMessages(id:String)



#GET    /joinstreams                   controllers.JoinStream.joinstreams
#POST   /joinstreams                   controllers.JoinStream.joinStream


#Schools

POST   /school                   controllers.SchoolController.addSchool
GET   /getAllSchoolForAUser      controllers.SchoolController.getAllSchoolForAUser
POST  /getSchoolNamebyId          controllers.SchoolController.getSchoolName


#UpdateUserInfo


POST   /detailed_reg                 controllers.DetailedRegistration.addInfo

#Class


POST   /class                  controllers.ClassController.addClass

#Auto populate class

POST  /autoPopulateClasses     controllers.ClassController.findClasstoAutoPopulate

#Getting the School JSON

GET   /schoolJson              controllers.DetailedRegistration.getSchoolsForLoggedInUser

GET   /loggedInUserJson        controllers.UserController.returnUserJson

#Basic Registration

POST   /verifyToken           controllers.BasicRegistration.basicRegistration
     
POST  /registerNewUser       controllers.BasicRegistration.newUser

POST  /getEmailforNewUser    controllers.BasicRegistration.emailSent

#GET   /basicRegistrationViaSocialSites   controllers.BasicRegistration.basicRegistrationViaSocialSites(email:String,userName:String,name:String)
#POST  /basicRegistrationViaSocialSites   controllers.BasicRegistration.newUser



#Media

POST  /getMediafromPost                                   controllers.MediaController.getMedia

# Map static resources from the /public folder to the /assets URL path
#GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /beamstream/*file                 controllers.Assets.at(path="/public/client", file)




