# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET / controllers.StreamController.index

#Beta Users
POST /betaUser   controllers.JoinBeamStream.regsisterToBeamStreamBeta



#User
POST /users      controllers.UserController.findUser


#Browser Closed

POST  /browserClosed          controllers.UserController.browserClosed

#Streams

GET /allStreamsForAUser controllers.StreamController.getAllStreamForAUser
GET /allClassStreamsForAUser controllers.StreamController.allClassStreamsForAUser
POST /noOfUsersAttendingAClass  controllers.StreamController.noOfUsersAttendingAClass
POST /deleteStream              controllers.StreamController.deleteTheStream



#Messages
POST /newMessage controllers.MessageController.newMessage
POST /getAllMessagesForAStream                controllers.MessageController.getAllMessagesForAStreamWithPagination
POST /getAllMessagesForAStreamSortedbyDate    controllers.MessageController.getAllMessagesForAStreamWithPagination
POST /getAllMessagesForAStreamSortedbyRocks   controllers.MessageController.getAllMessagesForAStreamSortedbyRocks
POST /getAllMessagesForAStreambyKeyword controllers.MessageController.getAllMessagesForAStreambyKeyword
POST /allPublicMessagesFromAllStreamsForAUser     controllers.StreamController.allPublicMessagesFromAllStreamsForAUser
POST /deleteMessage                               controllers.MessageController.deleteTheMessage

#Comments
POST   /newComment                   controllers.CommentController.newComment
POST    /allCommentsForAMessage       controllers.CommentController.getAllComments
POST    /rockingTheComment            controllers.CommentController.rockingTheComment
POST    /commentRockers                controllers.CommentController.commentRockers
POST    /deleteTheComment              controllers.CommentController.deleteTheComment


#Documents
#GET /documents controllers.DocumentController.documents


GET  /getAllDocumentsForAUser    controllers.DocumentController.getAllGoogleDocumentsForAUser
POST /changeTitleAndDescriptionForADocument controllers.DocumentController.changeTitleAndDescriptionForADocument
POST /newDocument controllers.DocumentController.newDocument
POST /rockTheDocument                    controllers.DocumentController.rockTheDocument
POST /getRockers controllers.DocumentController.giveMeRockersOfDocument
POST /getDocument controllers.DocumentController.getDocument
POST /getDocumentFromDisk controllers.DocumentController.getDocumentFromDisk

#Schools

POST /school controllers.SchoolController.addANewSchool
GET /getAllSchoolForAUser controllers.SchoolController.getAllSchoolForAUser
