# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET / controllers.StreamController.index



#User
POST /users      controllers.UserController.findUser


#Streams

GET /allStreamsForAUser controllers.StreamController.getAllStreamForAUser
GET /allClassStreamsForAUser controllers.StreamController.allClassStreamsForAUser
POST /newStream controllers.StreamController.newStream
POST /joinStreams controllers.StreamController.joinStream
POST /noOfUsersAttendingAClass  controllers.StreamController.noOfUsersAttendingAClass


#Messages
POST /newMessage controllers.MessageController.newMessage
POST /getAllMessagesForAStream                controllers.MessageController.getAllMessagesForAStreamWithPagination
POST /getAllMessagesForAStreamSortedbyDate    controllers.MessageController.getAllMessagesForAStreamWithPagination
POST /getAllMessagesForAStreamSortedbyRocks   controllers.MessageController.getAllMessagesForAStreamSortedbyRocks
POST /getAllMessagesForAStreambyKeyword controllers.MessageController.getAllMessagesForAStreambyKeyword
POST /allPublicMessagesFromAllStreamsForAUser     controllers.StreamController.allPublicMessagesFromAllStreamsForAUser


#Comments
POST   /newComment                   controllers.CommentController.newComment
POST    /allCommentsForAMessage       controllers.CommentController.getAllComments
POST    /rockingTheComment            controllers.CommentController.rockingTheComment
POST    /commentRockers                controllers.CommentController.commentRockers



#Documents
GET /documents controllers.DocumentController.documents
POST /newDocument controllers.DocumentController.newDocument
POST /getAllDocumentsForAUser    controllers.DocumentController.getAllDocumentsForAUser
POST /getAllDocumentsForCurrentUserSortedbyDate    controllers.DocumentController.getAllDocumentsForCurrentUserSortedbyDate

#Schools

#POST /school controllers.SchoolController.addSchool
GET /getAllSchoolForAUser controllers.SchoolController.getAllSchoolForAUser
POST /getSchoolNamebyId controllers.SchoolController.getSchoolName
GET  /getAllSchoolsForAutopopulate      controllers.SchoolController.getAllSchoolsForAutopopulate


#UpdateUserInfo


POST /detailed_reg controllers.DetailedRegistration.addInfo

#Class
POST /class                             controllers.ClassController.addClass
GET  /getAllClassesForAUser             controllers.ClassController.getAllClassesForAUser

#Auto populate class

POST /autoPopulateClassesbyCode controllers.ClassController.findClasstoAutoPopulatebyCode
POST /autoPopulateClassesbyName controllers.ClassController.findClasstoAutoPopulatebyName

#Getting the School JSON
GET /schoolJson controllers.DetailedRegistration.getSchoolsForLoggedInUser
GET /loggedInUserJson controllers.UserController.returnUserJson

#Basic Registration
POST /verifyToken          controllers.BasicRegistration.basicRegistration
POST /registerNewUser      controllers.BasicRegistration.newUser
POST /getEmailforNewUser   controllers.BasicRegistration.emailSent




#Destroy session
GET /signOut controllers.UserController.signOut


#Janrain
POST /userPage  controllers.UserController.registerUserViaSocialSite
GET /getJSONviaJanrain controllers.UserController.registerUserViaSocialSite
POST /getContactsViaJanrain controllers.UserController.getContactsViaSocialSite
GET /getContactsViaJanrain controllers.UserController.getContactsViaSocialSite

#Media
POST /getMediafromPost controllers.MediaController.getMedia
POST /getProfilePicForAUser      controllers.UserController.getProfilePicForAUser
GET /getAllProfilePicForAUser   controllers.MediaController.getAllProfilePicForAUser

GET /getAllProfileVideoForAUser   controllers.MediaController.getAllProfileVideoForAUser


#Message Rocks & Follows
POST /rockedIt controllers.MessageController.rockedTheMessage
POST /returnRockers controllers.MessageController.giveMeRockers
POST /followMessage  controllers.MessageController.followTheMessage
POST /isAFollower    controllers.MessageController.isAFollower


#Document Rocks
POST /rockedIt controllers.DocumentController.rockTheDocument
POST /getRockers controllers.DocumentController.giveMeRockers


#bitly
POST /bitly   controllers.MessageController.getShortUrlViabitly 

#Password Recovery
POST  /forgotPassword          controllers.UserController.forgotPassword

# Map static resources from the /public folder to the /assets URL path
GET  /beamstream/*file                   controllers.Assets.at(path="/public/client", file)




